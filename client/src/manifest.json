{
	"name": "Panoptichrome",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Remotely manage browser tabs.",

	"options_page": "options.html",

	"background": {
		"scripts": [
			"thirdparty/lodash.min.js",
			"thirdparty/q.js",
			"thirdparty/socket.io.min.js",
			"browserController.js"
		]
	},
	
	"permissions": [
		"tabs",
		"http://*/",
		"https://*/"
	]
}
